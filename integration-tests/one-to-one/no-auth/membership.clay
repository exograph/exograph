@postgres
service MembershipService {
  // A user may have an optional membership, but a membership must have an associated user
  @access(true)
  type User {
    @pk id: Int = autoincrement()
    name: String
    membership: Membership?
  }

  @access(true)
  type Membership {
    @pk id: Int = autoincrement()
    kind: String
    user: User
  }
}