@postgres
service UserPersistence {
    @table("user")
    @access(true)
    type User {
        id: Int = autoincrement() @pk
        username: String
        email: String?
    }
}

@deno("user.ts")
service RegistrationService {
    @access(true)
    export mutation registerUser(
        @inject claytip: Claytip,
        username: String,
        email: String
    ): Boolean
}