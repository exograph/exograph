@postgres
module SocialDatabase {
  @access(true)
  type User {
    @pk id: Int = autoIncrement()
    name: String

    posts: Set<Post>?
    // comments: Set<Comment>?
  }

  @access(true)
  type Post {
    @pk id: String
    title: String
    content: String
    user: User
    comments: Set<Comment>?
  }

  @access(true)
  type Comment {
    @pk id: String
    post: Post
    content: String
    user: User
  }

}