
@postgres
module TodoDatabase {
  @access(true)
  type Product {
    @pk id: Int = autoIncrement()
    name: String
    salePrice: Float
    purchasePrice: Float
  }

  @table(tracked=false)
  @access(true)
  type ProductProfit {
    @pk id: Int = autoIncrement()
    name: String
    salePrice: Float
    purchasePrice: Float
    @readonly profit: Float
  }
}
