operation: |
  query {
    concerts {
      id
      title
      mainArtists: concertArtists(where: {role: {eq: "main"}}) {
        ...artistInfo
      }
      accArtists: concertArtists(where: {role: {eq: "accompanying"}}) {
        ...artistInfo
      }
    }
  }  
  fragment artistInfo on ConcertArtist {
    id
    artist {
        id
        name
    }
    rank
  }
