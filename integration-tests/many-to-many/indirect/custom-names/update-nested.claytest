operation: |
  mutation {
    updateConcert(
        id: 1, 
        data: {
          title: "C1-updated", 
          concertArtists: {
            update: {id: 1, rank: 1, role: "main", artist: {id: 4}},
          }
        }
    ) {
      id
      title
      concertArtists(orderBy: {id: ASC}) {
        id
        artist {
          id
          name
        }
        role
        rank
      }
    }
  }
