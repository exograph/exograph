{
  "openrpc": "1.3.2",
  "info": {
    "title": "Exograph RPC API",
    "version": "1.0.0"
  },
  "methods": [
    {
      "name": "get_foos",
      "description": "Get multiple `Foo`s given the provided `where` filter, order by, limit, and offset",
      "params": [
        {
          "name": "where",
          "description": "Filter conditions for Foos",
          "required": false,
          "schema": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/FooFilter"
              },
              {
                "type": "null"
              }
            ]
          }
        },
        {
          "name": "orderBy",
          "description": "Ordering for the results",
          "required": false,
          "schema": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/FooOrdering"
              },
              {
                "type": "null"
              }
            ]
          }
        },
        {
          "name": "limit",
          "description": "Maximum number of results to return",
          "required": false,
          "schema": {
            "type": "integer",
            "nullable": true
          }
        },
        {
          "name": "offset",
          "description": "Number of results to skip",
          "required": false,
          "schema": {
            "type": "integer",
            "nullable": true
          }
        }
      ],
      "result": {
        "name": "result",
        "schema": {
          "type": "array",
          "items": {
            "$ref": "#/components/schemas/Foo"
          }
        }
      }
    },
    {
      "name": "get_foo",
      "description": "Get a single `Foo` given primary key fields",
      "params": [
        {
          "name": "id",
          "description": "Primary key field: id",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }
      ],
      "result": {
        "name": "result",
        "schema": {
          "oneOf": [
            {
              "$ref": "#/components/schemas/Foo"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    }
  ],
  "components": {
    "schemas": {
      "Foo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "verylong": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "verylong"
        ]
      },
      "IntFilter": {
        "type": "object",
        "properties": {
          "eq": {
            "type": "integer",
            "nullable": true
          },
          "neq": {
            "type": "integer",
            "nullable": true
          },
          "lt": {
            "type": "integer",
            "nullable": true
          },
          "lte": {
            "type": "integer",
            "nullable": true
          },
          "gt": {
            "type": "integer",
            "nullable": true
          },
          "gte": {
            "type": "integer",
            "nullable": true
          }
        }
      },
      "DecimalFilter": {
        "type": "object",
        "properties": {
          "eq": {
            "type": "string",
            "nullable": true
          },
          "neq": {
            "type": "string",
            "nullable": true
          },
          "lt": {
            "type": "string",
            "nullable": true
          },
          "lte": {
            "type": "string",
            "nullable": true
          },
          "gt": {
            "type": "string",
            "nullable": true
          },
          "gte": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "FooFilter": {
        "type": "object",
        "properties": {
          "id": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/IntFilter"
              },
              {
                "type": "null"
              }
            ]
          },
          "verylong": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/DecimalFilter"
              },
              {
                "type": "null"
              }
            ]
          },
          "and": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FooFilter"
            },
            "nullable": true
          },
          "or": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FooFilter"
            },
            "nullable": true
          },
          "not": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/FooFilter"
              },
              {
                "type": "null"
              }
            ]
          }
        }
      },
      "Ordering": {
        "type": "object",
        "properties": {
          "direction": {
            "type": "string",
            "enum": [
              "ASC",
              "DESC"
            ]
          }
        },
        "required": [
          "direction"
        ],
        "description": "Sort order direction"
      },
      "FooOrdering": {
        "type": "object",
        "properties": {
          "id": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/Ordering"
              },
              {
                "type": "null"
              }
            ]
          },
          "verylong": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/Ordering"
              },
              {
                "type": "null"
              }
            ]
          }
        }
      }
    }
  }
}