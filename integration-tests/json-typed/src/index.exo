@postgres
module TodoModule {
  @access(true)
  type Todo {
    @pk id: Int = autoIncrement()
    title: String
    metadata: Metadata // Mandatory json field
    info: Info? // Optional json field
  }

  @access(true)
  @json
  type Metadata {
    expectedEffortHrs: Int?
    notes: String
    completionDate: LocalDate
    tags: Array<String>
  }

  @access(true)
  @json
  type Info {
    description: String
  }
}
