{
  "openrpc": "1.3.2",
  "info": {
    "title": "Exograph RPC API",
    "version": "1.0.0"
  },
  "methods": [
    {
      "name": "get_todos",
      "description": "Get multiple `Todo`s given the provided `where` filter, order by, limit, and offset",
      "params": [
        {
          "name": "where",
          "description": "Filter conditions for Todos",
          "required": false,
          "schema": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/TodoFilter"
              },
              {
                "type": "null"
              }
            ]
          }
        },
        {
          "name": "orderBy",
          "description": "Ordering for the results",
          "required": false,
          "schema": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/TodoOrdering"
              },
              {
                "type": "null"
              }
            ]
          }
        },
        {
          "name": "limit",
          "description": "Maximum number of results to return",
          "required": false,
          "schema": {
            "type": "integer",
            "nullable": true
          }
        },
        {
          "name": "offset",
          "description": "Number of results to skip",
          "required": false,
          "schema": {
            "type": "integer",
            "nullable": true
          }
        }
      ],
      "result": {
        "name": "result",
        "schema": {
          "type": "array",
          "items": {
            "$ref": "#/components/schemas/Todo"
          }
        }
      }
    },
    {
      "name": "get_todo",
      "description": "Get a single `Todo` given primary key fields",
      "params": [
        {
          "name": "id",
          "description": "Primary key field: id",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }
      ],
      "result": {
        "name": "result",
        "schema": {
          "oneOf": [
            {
              "$ref": "#/components/schemas/Todo"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    }
  ],
  "components": {
    "schemas": {
      "Metadata": {
        "type": "object"
      },
      "Info": {
        "type": "object"
      },
      "Todo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "title": {
            "type": "string"
          },
          "metadata": {
            "$ref": "#/components/schemas/Metadata"
          },
          "info": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/Info"
              },
              {
                "type": "null"
              }
            ]
          }
        },
        "required": [
          "id",
          "title",
          "metadata"
        ]
      },
      "IntFilter": {
        "type": "object",
        "properties": {
          "eq": {
            "type": "integer",
            "nullable": true
          },
          "neq": {
            "type": "integer",
            "nullable": true
          },
          "lt": {
            "type": "integer",
            "nullable": true
          },
          "lte": {
            "type": "integer",
            "nullable": true
          },
          "gt": {
            "type": "integer",
            "nullable": true
          },
          "gte": {
            "type": "integer",
            "nullable": true
          }
        }
      },
      "StringFilter": {
        "type": "object",
        "properties": {
          "eq": {
            "type": "string",
            "nullable": true
          },
          "neq": {
            "type": "string",
            "nullable": true
          },
          "lt": {
            "type": "string",
            "nullable": true
          },
          "lte": {
            "type": "string",
            "nullable": true
          },
          "gt": {
            "type": "string",
            "nullable": true
          },
          "gte": {
            "type": "string",
            "nullable": true
          },
          "like": {
            "type": "string",
            "nullable": true
          },
          "ilike": {
            "type": "string",
            "nullable": true
          },
          "startsWith": {
            "type": "string",
            "nullable": true
          },
          "endsWith": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "TodoFilter": {
        "type": "object",
        "properties": {
          "id": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/IntFilter"
              },
              {
                "type": "null"
              }
            ]
          },
          "title": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/StringFilter"
              },
              {
                "type": "null"
              }
            ]
          },
          "and": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TodoFilter"
            },
            "nullable": true
          },
          "or": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TodoFilter"
            },
            "nullable": true
          },
          "not": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/TodoFilter"
              },
              {
                "type": "null"
              }
            ]
          }
        }
      },
      "Ordering": {
        "type": "object",
        "properties": {
          "direction": {
            "type": "string",
            "enum": [
              "ASC",
              "DESC"
            ]
          }
        },
        "required": [
          "direction"
        ],
        "description": "Sort order direction"
      },
      "TodoOrdering": {
        "type": "object",
        "properties": {
          "id": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/Ordering"
              },
              {
                "type": "null"
              }
            ]
          },
          "title": {
            "oneOf": [
              {
                "$ref": "#/components/schemas/Ordering"
              },
              {
                "type": "null"
              }
            ]
          }
        }
      }
    }
  }
}