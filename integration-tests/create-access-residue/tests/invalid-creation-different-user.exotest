operation: |
  mutation($uId: Int!) {
      createIssue(data: {title: "I1", assignee: {id: $uId}}) {
          id
          title
          assignee {
            id
            name
            position
          }
      }
  }
variable: |
  {
    "uId": $.u1id
  }
auth: |
  {
    "sub": $.u2id
  }
response: |
  {
    "errors": [
      {
        "message": "Not authorized"
      }
    ]
  }