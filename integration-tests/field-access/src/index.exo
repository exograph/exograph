context AuthContext {
  @jwt("sub") id: Int
  @jwt role: String
}

@postgres
module CustomerDatabase {
  @access(self.userId == AuthContext.id || AuthContext.role == "admin")
  type Customer {
    @pk id: Int = autoIncrement()
    name: String
    userId: Int = AuthContext.id
    @access(AuthContext.role == "admin") internalTier: Int = 0
  }
}
