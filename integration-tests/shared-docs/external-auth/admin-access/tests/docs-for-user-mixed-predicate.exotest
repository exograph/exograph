# Test for predicate at different levels of nesting (on document as well as documentUser)
# Same queries as docs-for-user, but drop "d1" from all ("id: {gt: 1}")
operation: |
  fragment DocumentWithUser on Document {
    id
    content
    documentUsers {
      userId
      read
      write
    }
  }
  query @unordered {
    u1Readable: documents(where: {
      id: {gt: 1},
      documentUsers: {and: [
        {userId: {eq: "u1"}},
        {read: {eq: true}}
      ]}}) {
      ...DocumentWithUser
    }
    u1Writable: documents(where: {
      id: {gt: 1},
      documentUsers: {and: [
        {userId: {eq: "u1"}},
        {write: {eq: true}}
      ]}}) {
      ...DocumentWithUser
    }
    u1ReadableAndWritable: documents(where: {
      id: {gt: 1},
      documentUsers: {and: [
        {userId: {eq: "u1"}},
        {and: [
          {read: {eq: true}},
          {write: {eq: true}}
        ]}
      ]}}) {
      ...DocumentWithUser
    }
    u1ReadableOrWritable: documents(where: {
      id: {gt: 1},
      documentUsers: {and: [
        {userId: {eq: "u1"}},
        {write: {eq: true}}
        {or: [
          {read: {eq: true}},
          {write: {eq: true}}
        ]}
      ]}}) {
      ...DocumentWithUser
    }
    u2Readable: documents(where: {
      id: {gt: 1},
      documentUsers: {and: [
        {userId: {eq: "u2"}},
        {read: {eq: true}}
      ]}}) {
      ...DocumentWithUser
