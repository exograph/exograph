      id: {gt: 1},
      documentUsers: {and: [
        {userId: {eq: "u4"}},
        {and: [
          {read: {eq: true}},
          {write: {eq: true}}
        ]}
      ]}}) {
      ...DocumentWithUser
    }
    u4ReadableOrWritable: documents(where: {
      id: {gt: 1},
      documentUsers: {and: [
        {userId: {eq: "u4"}},
        {write: {eq: true}}
        {or: [
          {read: {eq: true}},
          {write: {eq: true}}
        ]}
      ]}}) {
      ...DocumentWithUser
    }      
  }
