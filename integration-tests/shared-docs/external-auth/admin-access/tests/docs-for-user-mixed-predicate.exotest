      id: {gt: 1},
      documentUsers: {and: [
        {userId: {eq: "u3"}},
        {and: [
          {read: {eq: true}},
          {write: {eq: true}}
        ]}
      ]}}) {
      ...DocumentWithUser
    }
    u3ReadableOrWritable: documents(where: {
      id: {gt: 1},
      documentUsers: {and: [
        {userId: {eq: "u3"}},
        {or: [
          {read: {eq: true}},
          {write: {eq: true}}
        ]}
      ]}}) {
      ...DocumentWithUser
    }
    u4Readable: documents(where: {
      id: {gt: 1},
      documentUsers: {and: [
        {userId: {eq: "u4"}},
        {read: {eq: true}}
      ]}}) {
      ...DocumentWithUser
    }
