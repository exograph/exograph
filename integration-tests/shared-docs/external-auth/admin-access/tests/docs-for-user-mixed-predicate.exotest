      documentUsers: {and: [
        {userId: {eq: "u2"}},
        {and: [
          {read: {eq: true}},
          {write: {eq: true}}
        ]}
      ]}}) {
      ...DocumentWithUser
    }
    u2ReadableOrWritable: documents(where: {
      id: {gt: 1},
      documentUsers: {and: [
        {userId: {eq: "u2"}},
        {or: [
          {read: {eq: true}},
