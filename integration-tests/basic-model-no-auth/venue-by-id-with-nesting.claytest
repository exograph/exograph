operation: |
    query($id:Int!) {
        venue(id:$id) {
            id
            name
            published
            concerts {
                id
                title
                published
            }
        }
        venue2: venue(id:2) { # Use alias. Needed anyway, but also tests for how we process aliases
            id
            name
            published
            concert1: concerts(where: {id: {eq: 1}}) {  # This should result in an empty array, since there is no such concert for venue2
                id
                title
                published
            }
            concerts(where: {id: {eq: 2}}) {
                id
                title
                published
            }
        }
    } 
variable: |
    {
        "id": 1
    }
response: |
    {
      "data": {
        "venue": {
          "id": 1,
          "name": "Venue1",
          "published": true,
          "concerts": [
            {
              "id": 1,
              "title": "Concert1",
              "published": true
            }
          ]
        },
        "venue2": {
          "id": 2,
          "name": "Venue2",
          "published": false,
          "concert1": [],
          "concerts": [
            {
              "id": 2,
              "title": "Concert2",
              "published": false
            }
          ]
        }
      }
    }
    