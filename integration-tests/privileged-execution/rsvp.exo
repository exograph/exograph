context AuthContext {
  @jwt("role") role: String 
}

@postgres
service RsvpPersistence {
  // Non-admins cannot use the rsvp APIs (a service with priviledged Exograph will be able to escalate the role and thus use the APIs)
  // Later, we will allow to not even export this APIs
  @access(AuthContext.role == "admin")
  type Rsvp {
    @pk id: Int = autoIncrement()
    email: String
    count: Int
  }
}

@deno("rsvp-service.ts")
service RsvpService {
  @access(true)
  type RsvpConfirmation {
    email: String
    count: Int
  }

  @access(true)
  mutation processRsvp(email: String, count: Int, @inject exograph: ExographPriv): RsvpConfirmation
}