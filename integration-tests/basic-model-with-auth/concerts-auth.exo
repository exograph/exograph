context AuthContext {
  @jwt("sub") id: Int 
  @jwt role: String 
}

@postgres
module ConcertModule {
  @table("concerts")
  @access(query=AuthContext.role == "ROLE_ADMIN" || self.published, mutation=AuthContext.role == "ROLE_ADMIN")
  type Concert {
    @pk id: Int = autoIncrement()
    title: String
    @column("venueid")
    venue: Venue 
    published: Boolean
    @precision(20) @scale(2) 
    price: Decimal 
  }
  
  @table("venues")
  @access(query=AuthContext.role == "ROLE_ADMIN" || self.published, mutation=AuthContext.role == "ROLE_ADMIN")
  type Venue {
    @pk id: Int = autoIncrement()
    name: String
    @column("venueid") concerts: Set<Concert>? 
    published: Boolean
    @size(4) latitude: Float 
  }
}