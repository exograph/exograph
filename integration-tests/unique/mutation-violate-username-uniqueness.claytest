operation: |
    mutation($new_username: String!, $new_email_id: String!, $new_email_domain: String!) {
        createUser(data: {
            username: $new_username,
            email_id: $new_email_id,
            email_domain: $new_email_domain
        }) {
            id
        }
    }
variable: |
    {
        "new_username": "Alice02",

        // another.alice@example.com
        "new_email_id": "another.alice",
        "new_email_domain": "example.com"
    }
response: |
    {
      "errors": [
        {
            "message": "ERROR: duplicate key value violates unique constraint unique_constraint_username; DETAIL: Key (username)=(Alice02) already exists."
        }
      ]
    }