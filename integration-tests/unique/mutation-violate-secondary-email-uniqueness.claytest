operation: |
    mutation(
        $new_username: String!, 
        $new_primary_email_id: String!, 
        $new_secondary_email_id: String!,
        $new_email_domain: String!
    ) {
        createUser(data: {
            username: $new_username,
            primary_email_id: $new_primary_email_id
            secondary_email_id: $new_secondary_email_id,
            email_domain: $new_email_domain
        }) {
            id
        }
    }
variable: |
    {
        "new_username": "Bob04",

        // bob@example.com
        "new_primary_email_id": "bob",

        // alice2@example.com
        "new_secondary_email_id": "alice2",

        "new_email_domain": "example.com"
    }
response: |
    {
      "errors": [
        {
            "message": "ERROR: duplicate key value violates unique constraint unique_email_secondary; DETAIL: Key (secondary_email_id, email_domain)=(alice2, example.com) already exists."
        }
      ]
    }