
stages:
  - operation: |
        mutation createTodo($title: String!, $completed: Boolean) {
          createTodo(data: { title: $title, completed: $completed }) {
            id
            title
            completed
            userId
          }
        }
    variable: |
      {
        "title": "U1-T3",
        "completed": true
      }
    auth: |
      {
          "sub": "u1",
          "role": null
      } 
    response: |
      {
        "data": {
          "createTodo": {
            "id": 5,
            "title": "U1-T3",
            "completed": true,
            "userId": "u1"
          }
        }
      }
      
  - operation: |
