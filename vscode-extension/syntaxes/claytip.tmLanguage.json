{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "claytip",
	"patterns": [
		{
			"include": "#type-definition"
		},
		{
			"include": "#annotations"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.claytip",
					"match": "(//).*$\n?"
				},
				{
					"name": "comment.block.claytip",
					"begin": "(/\\*)",
					"end": "(\\*/)"
				}
			]
		},
		"type-definition": {
			"patterns": [{
				"name": "meta.typedef.claytip",
				"begin": "(model|context)(\\s+)([a-zA-Z]+)(\\s*)?({)?",
				"beginCaptures": {
					"1": {
						"name": "keyword.control.claytip"
					},
					"3": {
						"name": "entity.name.class.claytip"
					}
				},
				"patterns": [
					{
						"name": "meta.member.claytip",
						"match": "([a-zA-Z]+)(\\s*)?(:)?(\\s*)?([^@]+)?",
						"captures": {
							"1": {
								"name": "entity.other.attribute-name.claytip"
							},
							"5": {
								"patterns": [
									{
										"include": "#types"
									},
									{
										"include": "#comments"
									}
								]
							}
						}
					},
					{
						"include": "#annotations"
					},
					{
						"include": "#comments"
					}
				],
				"end": "}"
			}]
		},
		"expressions": {
			"patterns": [
				{
					"name": "entity.name.type.claytip",
					"match": "[A-Z][a-zA-Z]*"
				},
				{
					"name": "keyword.other.claytip",
					"match": "(self)"
				},
				{
					"name": "entity.other.attribute-name.claytip",
					"match": "[a-z][a-zA-Z]*"
				},
				{
					"include": "#constants"
				},
				{
					"include": "#operators"
				},
				{
					"include": "#comments"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "meta.type.claytip",
					"begin": "(\\[)",
					"patterns": [
						{
							"include": "#types"
						},
						{
							"include": "#comments"
						}
					],
					"end": "(\\])"
				},
				{
					"name": "entity.name.type.claytip",
					"match": "[a-zA-Z]+"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.logical.claytip",
					"match": "((\\|\\|)|(&&))"
				},
				{
					"name": "keyword.operator.comparison.claytip",
					"match": "((==)|(>=)|(<=)|(>)|(<))"
				}
			]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.claytip",
				"match": "(model|context)"
			}]
		},
		"annotations": {
			"patterns": [{
				"name": "meta.annotation.claytip",
				"begin": "(@([a-zA-Z]+)?)(\\()",
				"beginCaptures": {
					"1": {
						"name": "entity.name.function.claytip"
					}
				},
				"patterns": [
					{
						"include": "#expressions"
					},
					{
						"include": "#comments"
					}
				],
				"end": "\\)"
			}, {
				"name": "meta.annotation.claytip",
				"match": "(@([a-zA-Z]+)?)",
				"captures": {
					"1": {
						"name": "entity.name.function.claytip"
					}
				}
			}]
		},
		"constants": {
			"patterns": [
				{
					"name": "string.quoted.double.claytip",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.claytip",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "constant.numeric.claytip",
					"match": "[0-9]+"
				}
			]
		}
	},
	"scopeName": "source.clay"
}