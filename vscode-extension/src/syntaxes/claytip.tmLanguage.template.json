{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "claytip",
  "patterns": [
    {
      "include": "#service-definition"
    },
    {
      "include": "#context-definition"
    },
    {
      "include": "#annotations"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#imports"
    }
  ],
  "repository": {
    "imports": {
      "patterns": [
        {
          "name": "keyword.type.claytip",
          "match": "(import)"
        },
        {
          "include": "#constants"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.claytip",
          "match": "(//).*$\n?"
        },
        {
          "name": "comment.block.claytip",
          "begin": "(/\\*)",
          "end": "(\\*/)"
        }
      ]
    },
    "field": {
      "patterns": [
        {
          "name": "meta.member.claytip",
          "match": "({{identifier}}){{opt_ws}}:?{{opt_ws}}({{identifier}})?",
          "captures": {
            "1": {
              "name": "entity.other.attribute-name.claytip"
            },
            "2": {
              "patterns": [
                {
                  "include": "#types"
                }
              ]
            }
          }
        }
      ]
    },
    "field-default-value": {
      "patterns": [
        {
          "name": "meta.default-value-field.claytip",
          "begin": "={{opt_ws}}",
          "end": "{{ws}}",
          "patterns": [
            {
              "include": "#function-name"
            },
            {
              "include": "#function-parameters"
            },
            {
              "include": "#expressions"
            }
          ]
        }
      ]
    },
    "type-definition": {
      "patterns": [
        {
          "name": "meta.typedef.claytip",
          "begin": "(type){{ws}}({{identifier}}){{opt_ws}}{?",
          "beginCaptures": {
            "1": {
              "name": "keyword.type.claytip"
            },
            "2": {
              "name": "entity.name.class.claytip"
            }
          },
          "patterns": [
            {
              "include": "#field"
            },
            {
              "include": "#field-default-value"
            },
            {
              "include": "#annotations"
            },
            {
              "include": "#comments"
            }
          ],
          "end": "}"
        }
      ]
    },
    "context-definition": {
      "patterns": [
        {
          "name": "meta.typedef.claytip",
          "begin": "(context){{ws}}({{identifier}}){{opt_ws}}{?",
          "beginCaptures": {
            "1": {
              "name": "keyword.type.claytip"
            },
            "2": {
              "name": "entity.name.class.claytip"
            }
          },
          "patterns": [
            {
              "include": "#field"
            },
            {
              "include": "#annotations"
            },
            {
              "include": "#comments"
            }
          ],
          "end": "}"
        }
      ]
    },
    "service-definition": {
      "patterns": [
        {
          "name": "meta.service.claytip",
          "begin": "(service){{ws}}({{identifier}}){{opt_ws}}{?",
          "beginCaptures": {
            "1": {
              "name": "keyword.service.claytip"
            },
            "2": {
              "name": "entity.name.class.claytip"
            }
          },
          "patterns": [
            {
              "include": "#functions"
            },
            {
              "include": "#model-definition"
            },
            {
              "include": "#type-definition"
            },
            {
              "include": "#annotations"
            },
            {
              "include": "#comments"
            }
          ],
          "end": "}"
        }
      ]
    },
    "expressions": {
      "patterns": [
        {
          "name": "keyword.other.claytip",
          "match": "(self)"
        },
        {
          "name": "entity.name.type.claytip",
          "match": "{{identifier}}"
        },
        {
          "name": "entity.other.attribute-name.claytip",
          "match": "{{identifier}}"
        },
        {
          "include": "#constants"
        },
        {
          "include": "#operators"
        },
        {
          "include": "#comments"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "meta.type.claytip",
          "begin": "(\\<)",
          "patterns": [
            {
              "include": "#types"
            },
            {
              "include": "#comments"
            }
          ],
          "end": "(\\>)"
        },
        {
          "name": "entity.name.type.claytip",
          "match": "{{identifier}}"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.claytip",
          "match": "((\\|\\|)|(&&))"
        },
        {
          "name": "keyword.operator.comparison.claytip",
          "match": "((==)|(>=)|(<=)|(>)|(<))"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.method.declaration.claytip",
          "begin": "(?:(export){{ws}})?(query|mutation|interceptor)(?:(?:{{ws}}|(?<=\\*))({{identifier}}))?{{opt_ws}}",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.export.claytip"
            },
            "2": {
              "name": "storage.type.function.claytip"
            },
            "3": {
              "name": "meta.definition.function.claytip entity.name.function.claytip"
            }
          },
          "end": "(^{{opt_ws}}$|(?:^{{opt_ws}}))",
          "patterns": [
            {
              "include": "#function-name"
            },
            {
              "include": "#function-parameters"
            },
            {
              "include": "#return-type"
            },
            {
              "include": "#annotations"
            },
            {
              "include": "#comments"
            }
          ]
        }
      ]
    },
    "function-name": {
      "name": "meta.definition.function.claytip entity.name.function.claytip",
      "match": "{{identifier}}"
    },
    "function-parameters": {
      "name": "meta.parameters.claytip",
      "begin": "\\(",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.parameters.begin.claytip"
        }
      },
      "end": "\\)",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.parameters.end.claytip"
        }
      },
      "patterns": [
        {
          "include": "#function-parameters-body"
        },
        {
          "include": "#comments"
        },
        {
          "include": "#annotations"
        }
      ]
    },
    "function-parameters-body": {
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#parameter-name"
        },
        {
          "include": "#parameter-type-annotation"
        },
        {
          "name": "punctuation.separator.parameter.claytip",
          "match": ","
        }
      ]
    },
    "return-type": {
      "patterns": [
        {
          "name": "meta.return.type.claytip",
          "begin": "{{opt_ws}}(:)",
          "beginCaptures": {
            "1": {
              "name": "keyword.operator.type.annotation.claytip"
            }
          },
          "end": "(?<![:])((?=[{};,]|//|^{{opt_ws}}$)|((?<=\\S)(?={{opt_ws}}$)))",
          "patterns": [
            {
              "include": "#types"
            }
          ]
        },
        {
          "include": "#types"
        }
      ]
    },
    "parameter-type-annotation": {
      "patterns": [
        {
          "name": "meta.type.annotation.claytip",
          "begin": "(:)",
          "beginCaptures": {
            "1": {
              "name": "keyword.operator.type.annotation.claytip"
            }
          },
          "end": "(?=[,)])|(?==[^>])",
          "patterns": [
            {
              "include": "#type"
            }
          ]
        }
      ]
    },
    "parameter-name": {
      "patterns": [
        {
          "match": "(?x)(?:(?<![_[:alnum:]]){{ws}})?(?<!=|:)(?<![_[:alnum:]])(?:({{identifier}}))(?![_[:alnum:]]){{opt_ws}}",
          "captures": {
            "1": {
              "name": "variable.parameter.claytip"
            },
            "2": {
              "name": "variable.parameter.claytip"
            }
          }
        }
      ]
    },
    "type": {
      "patterns": [
        {
          "include": "#comment"
        },
        {
          "include": "#types"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "comment": "annotation with properties such as @size(5)",
          "name": "meta.annotation.claytip",
          "begin": "(@({{identifier}})?)(\\()",
          "beginCaptures": {
            "1": {
              "name": "entity.name.function.claytip"
            }
          },
          "patterns": [
            {
              "include": "#expressions"
            },
            {
              "include": "#comments"
            }
          ],
          "end": "\\)"
        },
        {
          "comment": "annotation without properties such as @pk",
          "name": "meta.annotation.claytip",
          "match": "(@({{identifier}})?)",
          "captures": {
            "1": {
              "name": "entity.name.function.claytip"
            }
          }
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "string.quoted.double.claytip",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.claytip",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "constant.numeric.claytip",
          "match": "[0-9]+"
        }
      ]
    }
  },
  "scopeName": "source.clay"
}
