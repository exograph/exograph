{
  "fileTypes": [],
  "scopeName": "markdown.clay.codeblock",
  "injectionSelector": "L:markup.fenced_code.block.markdown",
  "patterns": [
    {
      "contentName": "meta.embedded.block.clay",
      "begin": "(claytip|clay|Clay)(\\s+[^`~]*)?$",
      "end": "(^|\\G)(?=\\s*[`~]{3,}\\s*$)",
      "patterns": [
        {
          "begin": "(^|\\G)(\\s*)(.*)",
          "while": "(^|\\G)(?!\\s*([`~]{3,})\\s*$)",
          "patterns": [
            {
              "include": "source.clay"
            }
          ]
        }
      ]
    }
  ]
}
