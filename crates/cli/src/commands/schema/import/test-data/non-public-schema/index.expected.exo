@postgres(schema="t")
module TDatabase {
  @access(query=true, mutation=false)
  type Todo {
    @pk id: Int = autoIncrement()
    completed: Boolean
    priority: Int = 0
    title: String
    user: User
  }
}

@postgres(schema="u")
module UDatabase {
  @access(query=true, mutation=false)
  type User {
    @pk id: Int = autoIncrement()
    @unique email: String
    firstName: String
    lastName: String
    profileImageUrl: String
    role: String = "user"
    todos: Set<Todo>
  }
}